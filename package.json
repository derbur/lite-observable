{
  "name": "oblite",
  "description": "A simple, no-frills, lightweight observable",
  "version": "0.0.11",
  "main": "oblite.js",
  "types": "oblite.d.ts",
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^4.2.15",
    "@types/mocha": "^8.2.1",
    "@types/sinon": "^9.0.10",
    "@types/sinon-chai": "^3.2.5",
    "@typescript-eslint/eslint-plugin": "^4.15.2",
    "@typescript-eslint/parser": "^4.15.2",
    "chai": "^4.3.0",
    "eslint": "^7.21.0",
    "mocha": "^8.3.0",
    "sinon": "^9.2.4",
    "sinon-chai": "^3.5.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "scripts": {
    "build": "rm -rf dist && npx tsc && cp package.json dist/package.json && cp NPM_README.md dist/README.md && yarn updateNpmReadme",
    "test": "npx mocha -r ts-node/register --extensions ts --watch --watch-files 'tests/*.ts' tests/*.ts",
    "example": "npx ts-node ./examples/example.ts",
    "updateNpmReadme": "awk -i inplace -v a=\"$(cat ./examples/example.ts)\" '{sub(/__EXAMPLE_CODE__/,a)}1' dist/README.md"
  }
}
